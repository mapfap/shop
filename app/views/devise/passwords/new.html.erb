<center>
  <%= devise_error_messages! %>
</center>

<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post , class: "", role: "form"}) do |f| %>
      <div class="page-header">
        <h2>Reset password</h2>
      </div>
      
      <%= f.email_field :email, autofocus: true, placeholder: "Email address", required: true, class: "form-control" %>
      <br>

      <div><%= f.submit "Reset password", class: "btn btn-lg btn-primary btn-block" %></div>
    <% end %>
  </div>
</div>

<style>
  #error_explanation h2 {
    font-size: 16px;
    display: none;
  }

  #error_explanation ul {
    background: #ff6381;
    padding: 10px;
    border-radius: 5px;
    width: 60%;
  }

  #error_explanation li {
    list-style-type: none;
    font-weight: bold;
  }

</style>