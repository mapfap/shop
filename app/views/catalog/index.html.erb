    $(".product").on("mousemove", function(event) {
      // $( "#log" ).text( "pageX: " + event.pageX + ", pageY: " + event.pageY );

      // if (first) {
        width = $(this).offset().left;
        // first = false;
      // }

      var x = event.pageX - width;

      // var deg = (x - (width/2));
      // var deg = (x - 105) / 5.0
      // console.log(deg)
      // var deg = ( x > 105 ) ? -5 : 5;
      var deg = ( x <= 105 ) ? -10 : 10;

      if ( deg < 0 ) {
        $(".shadow-right").css("opacity", "0");
        $(this).children(".shadow-left").css("opacity", "0.3");
      } else {
        $(".shadow-left").css("opacity", "0");
        $(this).children(".shadow-right").css("opacity", "0.3");
      }

      $(this).css("-webkit-transform", "rotateY(" + deg + "deg)");

    });


    $(".product").on("mouseout", function(event) {
      // first = true;
      $(this).css("-webkit-transform", "rotateY(" + 0 + "deg)");
      $(".shadow-left").css("opacity", "0");
      $(".shadow-right").css("opacity", "0");
    });


  });
</script>
