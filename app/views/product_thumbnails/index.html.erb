<h1>Listing product_thumbnails</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_thumbnails.each do |product_thumbnail| %>
      <tr>
        <td><%= link_to 'Show', product_thumbnail %></td>
        <td><%= link_to 'Edit', edit_product_thumbnail_path(product_thumbnail) %></td>
        <td><%= link_to 'Destroy', product_thumbnail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

